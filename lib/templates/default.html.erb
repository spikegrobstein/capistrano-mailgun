<html>
<head>
  <style>
    body {
      font: 12px "Helvetica", "Lucida Grande", "Trebuchet MS", Verdana, sans-serif;
    }
    .section h2 {
      color: #999;
      margin: 0;
    }

    .section {
      margin-bottom: 10px;
      border-radius: 10px;
      background-color: #eee;

      padding: 5px 20px;
    }

    dt {
      width: 15%;
      margin-right: 10px;
      display: inline-block;
      white-space: nowrap;

      clear: both;
    }

    dd {
      width: 65%;
      display: inline-block;
    }

    dl dt {
      font-weight: bold;
    }

    .log ul {
      font-family: monospace;

      list-style: none;
    }

    .log ul li {
      margin: 5px;
    }

    .log ul li a {
      font-weight: bold;
      padding: 2px 5px;
      background-color: #eee;
      color: #666;
      text-decoration: none;
    }

    .log ul li a:hover {
      text-decoration: underline;
      color: black;
    }

  </style>
</head>
<body>

  <h1>
    <%= fetch(:stage, '').to_s.capitalize %> <%= application.capitalize %> deployment completed!
  </h1>

  <div class="section">
    <h2>Deployment Overview</h2>

    <dl>
      <dt>Deployed by:</dt>
      <dd><%= deployer_username %></dd>

      <dt>Deployed at:</dt>
      <dd><%= Time.now %></dd>
    </dl>

    <dl>
      <dt>Application:</dt>
      <dd><%= fetch(:application, 'N/A') %></dd>

      <dt>Repository:</dt>
      <dd><%= fetch(:repository, 'N/A') %></dd>

      <% if fetch(:stage, nil) %>
      <dt>Environment:</dt>
      <dd><%= stage %></dd>
      <% end %>
    </div>

    <div class="section">
      <h2>Deployment Details</h2>

      <dl>
        <% if fetch(:branch, nil) %>
        <dt>Ref:</dt>
        <dd><%= branch %></dd>
        <% end %>

        <dt>Sha1:</dt>
        <dd><%= fetch(:latest_revision, 'N/A') %></dd>

        <dt>Release:</dt>
        <dd><%= fetch(:release_name, 'N/A') %></dd>

      </dl>

      <% if fetch(:github_url, nil) %>
      <dl>
        <dt>WWW:</dt>
        <dd><%= github_url %>/tree/<%= latest_revision %></dd>
      </dl>
      <% end %>
    </div>

    <% if fetch(:mailgun_message, nil) %>
    <div id="mailgun_message" class="section">
      <h2>Custom Message:</h2>
      <p>
        <%= fetch(:mailgun_message) %>
      </p>
    </div>
    <% end %>

    <% if fetch(:mailgun_include_servers, false) %>
    <div id="mailgun_servers" class="section">
      <h2>Deployed to:</h2>
      <ul>
        <% fetch(:mailgun_deploy_servers).each do |server| %>
          <li><%= server.host %></l>
        <% end %>
      </ul>
    </div>
    <% end %>

<% log_output = mailgun.log_output(mailgun_current_revision, fetch(:real_revision, nil)) %>
<% unless log_output.count == 0 %>
    <div class="log">
      <h2>Log:</h2>

      <ul>
        <% log_output.each do |line| %>
          <li>
            <% if fetch(:github_url, nil) && line[0] != 'n/a' %>
            <a href="<%= github_url %>/commit/<%= line[0] %>"><%= line[0] %></a>
            <% else %>
            <%= line[0] %>
            <% end %>

            <%= line[1] %>
          </li>
        <% end %>
      </ul>
    </div>
<% end %>

</body>
</html>
